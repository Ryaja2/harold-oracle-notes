function renderBlogTeasers() {
  const grid = document.getElementById('blog-grid');
  grid.innerHTML = blogTeasers.map(t => `
    <div class="blog-post">
      <h3>${t.emoji} ${t.title}</h3>
      <p>${t.teaser}</p>
      <a href="${t.link}" class="read-more">Read More ‚Üí</a>
    </div>
  `).join('');
}

function renderPitfalls() {
  const grid = document.getElementById('pitfalls-grid');
  grid.innerHTML = pitfalls.map(t => `
    <div class="pitfall-post">
      <h3>${t.emoji} ${t.title}</h3>
      <p>${t.teaser}</p>
      <a href="${t.link}" class="read-more">Read More ‚Üí</a>
    </div>
  `).join('');
}

// History
let history = JSON.parse(localStorage.getItem('haroldHistory') || '[]');

function addToHistory(text) {
  history.unshift(text);
  if (history.length > 10) history.pop();
  localStorage.setItem('haroldHistory', JSON.stringify(history));
}

function renderHistory() {
  const list = document.getElementById('history-list');
  if (history.length === 0) {
    list.innerHTML = '<p>No history yet... (‚Ä¢ÃÄ·¥ó‚Ä¢ÃÅ )</p>';
  } else {
    list.innerHTML = history.slice(0,10).map((p, i) => `<div style="padding:8px 0;border-bottom:1px solid var(--border-accent);font-style:italic;opacity:0.9;">${i+1}. ${p}</div>`).join('') + '<button onclick="clearHistory(); return false;" style="margin-top:10px;padding:5px 10px;font-size:0.9em;background:var(--danger);color:white;border:none;border-radius:5px;cursor:pointer;">Clear üóëÔ∏è</button>';
  }
}

function clearHistory() {
  history = [];
  localStorage.removeItem('haroldHistory');
  renderHistory();
}

function generateRSS() {
  const items = [...blogTeasers, ...pitfalls].map(t => `
<item>
  <title>${t.emoji} ${t.title}</title>
  <description>${t.teaser}</description>
  <link>${window.location.href}</link>
  <pubDate>${new Date().toUTCString()}</pubDate>
</item>
`).join('');
  const rss = `<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
<channel>
  <title>Harold's Oracle RSS</title>
  <link>${window.location.href}</link>
  <description>Snarky LDS/Dev prophecies & pitfalls</description>
  ${items}
</channel>
</rss>`;
  const blob = new Blob([rss], {type: 'application/rss+xml;charset=utf-8'});
  const a = document.createElement('a');
  a.style.display = 'none';
  a.href = URL.createObjectURL(blob);
  a.download = 'harold-oracle.rss';
  document.body.appendChild(a);
  a.click();
  document.body.removeChild(a);
  URL.revokeObjectURL(a.href);
}

function generateQuote() {
if (isTyping) return;
const quote = quotes[Math.floor(Math.random() * quotes.length)];
typewriter(quote);
}
function typewriter(text) {
isTyping = true;
const display = document.getElementById('quote-display');
display.textContent = '';
let i = 0;
function typeChar() {
if (i < text.length) {
display.textContent += text.charAt(i);
i++;
setTimeout(typeChar, 60 + Math.random()*40);
} else {
isTyping = false;
}
}
typeChar();
}
// Auto prophecy every ~25s
setInterval(generateQuote, 25000);
// Stars
window.addEventListener('load', () => {
const starsContainer = document.getElementById('stars');
for (let i = 0; i < 150; i++) {
const star = document.createElement('div');
star.className = 'star';
star.style.left = Math.random() * 100 + '%';
star.style.top = Math.random() * 100 + '%';
star.style.width = star.style.height = (Math.random() * 2.5 + 0.5) + 'px';
star.style.animationDelay = Math.random() * 3 + 's';
starsContainer.appendChild(star);
}
generateQuote(); // initial one
});
// Theme toggle
const themeToggle = document.getElementById('theme-toggle');
themeToggle.addEventListener('click', () => {
document.body.classList.toggle('light');
themeToggle.textContent = document.body.classList.contains('light') ? 'üåô' : '‚òÄÔ∏è';
localStorage.setItem('theme', document.body.classList.contains('light') ? 'light' : 'dark');
});
if (localStorage.getItem('theme') === 'light') {
document.body.classList.add('light');
themeToggle.textContent = 'üåô';
}
